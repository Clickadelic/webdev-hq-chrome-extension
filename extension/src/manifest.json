{
	"manifest_version": 3,
	"name": "WebDev HQ",
	"description": "WebDev HQ Chrome Extension | A daily webdeveloper dashboard. Visit https://webdev-hq.com/ for more information.",
	"author": "admin@webdev-hq.com",
	"version": "1.0.0",
	"action": {
		"default_title": "Webdev HQ",
		"default_popup": "./popup.html"
	},
	"default_locale": "en",
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"icons": {
		"16": "./static/icons/extension/icon-16.png",
		"32": "./static/icons/extension/icon-32.png",
		"48": "./static/icons/extension/icon-48.png",
		"128": "./static/icons/extension/icon-128.png"
	},
	"chrome_url_overrides": {
		"newtab": "newTab.html"
	},
	"side_panel": {
	"default_path": "panel.html",
	"openPanelOnActionClick": true
	},
	"host_permissions": [
		"https://*.webdev-hq.com/*",
		"https://developer.chrome.com/*"
	],
	"permissions": [
		"alarms",
		"identity",
		"identity.email",
		"tabs",
		"tabGroups",
		"bookmarks",
		"storage",
		"downloads",
		"contextMenus",
		"history"
	],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],
	"devtools_page": "./views/devtools.html"
}