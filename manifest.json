{
	"manifest_version": 3,
	"name": "WebDev HQ",
	"version": "0.0.2",
	"action": {
		"default_title": "Webdev HQ",
		"default_popup": "views/popup.html"
	},
	"options_ui": {
		"page": "views/options.html",
		"open_in_tab": true
	},
	"background": {
		"service_worker": "./js/background.js"
	},
	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "run_at": "document_idle",
		  "css": ["./css/webdev-hq-content.css"],
		  "js": ["./js/content.js"]
		}
	],
	"externally_connectable": {
		"matches": ["https://*.webdev-hq.com/*"]
	},
	"web_accessible_resources": [
		{
			"resources": [
				"assets/logo-webdev-hq-white-bg.png"
			],
			"matches": ["https://*.youtube.com/*"]
		}
	],
	"default_locale": "en",
	"description": "WebDev HQ Chrome Extension | A daily webdeveloper dashboard. Visit https://webdev-hq.com/ for more information.",
	"icons": {
		"16": "./static/icons/extension/icon-16.png",
		"32": "./static/icons/extension/icon-32.png",
		"48": "./static/icons/extension/icon-48.png",
		"128": "./static/icons/extension/icon-128.png"
	},
	"host_permissions": [
		"https://*.webdev-hq.com/*"
	],
	"permissions": [
		"tabGroups",
		"tabs",
		"storage",
		"downloads",
		"contextMenus",
		"bookmarks"
	],
	"author": "admin@webdev-hq.com",
	"devtools_page": "./views/devtools.html"
  }