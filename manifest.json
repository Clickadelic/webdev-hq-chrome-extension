{
	"manifest_version": 3,
	"name": "WebDev HQ",
	"version": "0.0.2",
	"action": {
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["./js/links.js"]
		}
	],
	"background": {
		"service_worker": "./js/bg-loader.js"
	},
	"default_locale": "en",
	"description": "WebDev HQ Chrome Extension",
	"icons": {
		"16": "./images/icon-16.png",
		"32": "./images/icon-32.png",
		"48": "./images/icon-48.png",
		"128": "./images/icon-128.png"
	},
	"host_permissions": [
		"https://developer.chrome.com/*"
	],
	"permissions": [
		"tabGroups"
	],
	"author": "admin@webdev-hq.com",
	"devtools_page": "devtools.html"
  }