{
	"manifest_version": 3,
	"name": "WebDev HQ",
	"version": "0.0.1",

	"action": {
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
		  "matches": ["https://*.webdev-hq.com/*"],
		  "css": ["./assets/css/content.css"],
		  "js": ["./assets/js/content-script.js"]
		}
	],
	"default_locale": "en",
	"description": "WebDev HQ Chrome Extension",
	"icons": {
		"16": "assets/images/icon-16.png",
		"32": "assets/images/icon-32.png",
		"48": "assets/images/icon-48.png",
		"128": "assets/images/icon-128.png"
	},
	"host_permissions": [
		"https://developer.chrome.com/*"
	],
	"permissions": [
		"tabGroups"
	],
	"author": "admin@webdev-hq.com",
	"devtools_page": "devtools.html"
  }